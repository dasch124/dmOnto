        </vocab>
        <vocab ID="vocabs.resourceTypes">
            <name>resource types</name>
            <values>
                <list>
                    <item></item>
                </list>
            </values>
            <note>The type of a resource.</note>
        </vocab>
        <vocab ID="vocabs.contributorRoles">
            <name>contributor roles</name>
            <values><p>Taken from <ref uri="https://www.loc.gov/marc/relators/relaterm.html">MARC Relators</ref>.</p></values>
        </vocab>
    </vocabularies>
    <datatypes>
        <datatype ID="shortText">
            <name>Short Text</name>
            <note>A string with less than 256 characters</note>
        </datatype>
        <datatype ID="longText">
            <name>Long Text</name>
            <note>A string with more than 256 characters</note>
        </datatype>
        <datatype ID="term">
            <name>Vocab Term</name>
            <note>A term from a controlled vocabulary.</note>
        </datatype>
        <datatype ID="uri">
            <name>URI</name>
            <note>any URI</note>
        </datatype>
        <datatype ID="integer">
            <name>Integer</name>
        </datatype>
    </datatypes>
