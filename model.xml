                </list>
            </values>
        </vocab>
        <vocab ID="vocabs.processTypes">
            <name>Process Types</name>
            <values>
                <list>
                    <item>manual</item>
                    <item>programmatic</item>
                    <item>interactive</item>
                </list>
            </values>
        </vocab>
        <vocab ID="vocabs.status">
            <name>Lifecycle Status</name>
            <values>
                <list>
                    <item>planned</item>
