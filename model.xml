        <class ID="Resource" type="abstract">
            <name>Resource</name>
            <definition>
                <p>A digital resource; abstract super class for <className>Dataset</className>, <className>Service</className> or <className>Documentation</className>.</p>
            </definition>
            <properties>
                <property ID="resource.name">
                    <arity>1</arity>
                    <name>Name</name>
                    <datatypeRef target="shortText"/>
                </property>
                <property ID="resource.description">
                    <arity>0-1</arity>
                    <name>Description</name>
                    <datatypeRef target="longText"/>
                </property>
                <property ID="resource.pid">
                    <arity>0-n</arity>
                    <name>PID</name>
                    <datatypeRef target="uri"/>
                    <note>Any kind of persistent identifier</note>
                </property>
                <property ID="resource.status">
                    <arity>1</arity>
                    <name>Status</name>
                    <datatypeRef target="vocabs.status"/>
                </property>
                <property ID="resource.type">
                    <arity>1-n</arity>
                    <name>Type</name>
                    <datatypeRef target="vocabs.resourceTypes"/>
                </property>
            </properties>
        </class>
        
        
        <class ID="Collection" parent="Resource">
            <name>Collection</name>
            <definition>
                <p>A set of data sets.</p>
            </definition>
        </class>
        
        <class ID="Format">
            <name>Format</name>
            <definition>any defnied format or standard</definition>
        </class>
        
        <class ID="Software" parent="Resource">
            <name>Software</name>
            <definition>
                <p>A software implementing a <className target="Process">Process</className>.</p>
            </definition>
        </class>
        
        
        <class ID="Service" parent="Actor">
            <name>Service</name>
            <definition>
                <p>An running instance of a piece of <className target="Software">software</className> provided by a server.</p>
            </definition>
            <properties>
                <property ID="service.url">
                    <arity>1-n</arity>
                    <name>URI</name>
                    <datatypeRef target="uri"/>
                    <note><p>One or more URIs under which the Service is addressable.</p></note>
                </property>
                <property ID="service.status">
                    <arity>1</arity>
                    <name>Service Status</name>
                    <datatypeRef target="term" vocabRef="vocabs.status"/>
                </property>
            </properties>
            <mapping targetLanguage="Redmine">
                <p><ref uri="https://redmine.acdh.oeaw.ac.at/issues?utf8=%E2%9C%93&amp;amp;set_filter=1&amp;sort=id%3Adesc&amp;f%5B%5D=status_id&amp;op%5Bstatus_id%5D=o&amp;f%5B%5D=tracker_id&amp;op%5Btracker_id%5D=%3D&amp;v%5Btracker_id%5D%5B%5D=7&amp;f%5B%5D=&amp;c%5B%5D=project&amp;c%5B%5D=tracker&amp;c%5B%5D=status&amp;c%5B%5D=priority&amp;c%5B%5D=subject&amp;c%5B%5D=assigned_to&amp;c%5B%5D=updated_on&amp;group_by=&amp;t%5B%5D=">issues of tracker Service</ref></p>
            </mapping>
        </class>
        
        <class ID="Dataset" parent="Resource">
            <name>Data Set</name>
            <definition>
                <p>Any kind of digital asset in a database or file-based.</p>
            </definition>
        </class>
        <class ID="Publication" parent="Resource">
            <name>Publication</name>
            <definition>
                <p>Any kind of documentation, including best practice, learning resources jetc.</p>
            </definition>
        </class>
        
        <class ID="Project">
            <name>Project</name>
            <definition>
                <p>A research project</p>
            </definition>
            <properties>
                <property ID="externalIdentifier">
                    <arity>0-n</arity>
                    <name>external ID</name>
                    <datatypeRef target="shortText"/>
                </property>
            </properties>
        </class>
        <class ID="Actor" type="abstract">
            <name>Actor</name>
            <definition>Abstract superclass of "Person" or "Institution"</definition>
        </class>
        <class ID="Person" parent="Actor">
            <name>Person</name>
            <definition>A natural person</definition>
        </class>
        <class ID="Institution" parent="Actor">
            <name>Institition</name>
            <definition>An institution, corporate body or similar entity.</definition>
        </class>
        
        <class ID="Instance">
            <name>Instance</name>
            <definition>an instance of a resource, e.g. one or several files, a table in a RDBMS</definition>
            <properties>
                <property ID="instance.function">
                    <arity>1</arity>
                    <name>Type</name>
                    <datatypeRef target="term" vocabRef="vocabs.instanceRoles"/>
                </property>
            </properties>
            <note>This is the set of <className target="File">Files</className> needed to reproduce a <className>Resource</className> fully or partiall.</note>
        </class>
        
        <class ID="Carrier">
            <name>Information Carrier</name>
            <definition>any information carrier</definition>
        </class>
        
        <class ID="File" parent="Instance">
            <name>File</name>
           <definition>a file on a carrier medium</definition>
            <properties>
                <property ID="File.dimensions">
                    <arity>0-1</arity>
                    <name>Dimensions</name>
                    <datatypeRef target="integer"></datatypeRef>
                    <note>in KB</note>
                </property>
            </properties>
            <mapping targetLanguage="LRMoo" version="0.7">
                <p></p>
            </mapping>
        </class>
        
        
        <class ID="Process">
            <name>Process</name>
            <definition>A process / algorithm implemented</definition>
            <properties>
                <property ID="process.type">
                    <arity>0-1</arity>
                    <name>Process type</name>
                    <datatypeRef target="term" vocabRef="vocabs.processTypes"/>
                </property>
            </properties>
        </class>
    </classes>
    <groups>
        <group ID="cris">
            <name>CRIS</name>
            <className target="Actor"/>
            <className target="Project"/>
            <className target="Institution"/>
            <className target="Person"/>
            <className target="Publication"/>
        </group>
        
        <group ID="redmine">
            <name>Redmine</name>
            <className target="Service"/>
        </group>
    </groups>
    <relations>
        <!-- INSTITUTION RELATIONS -->
        <relation ID="institutionHasMemberActor">
            <sourceClass target="Institution">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Actor">
                <arity>1-n</arity>
            </targetClass>
            <name>has member</name>
            <reverseName>is member of</reverseName>
        </relation>
        
        <relation ID="institutionHostsProject">
            <sourceClass target="Institution">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Project">
                <arity>1-n</arity>
            </targetClass>
            <name>is hosting institution of</name>
            <reverseName>has hosting institution</reverseName>
        </relation>
        
        
        <!-- ACTOR RELATIONS -->
        <relation ID="personIsContributorTo" type="implicit">
            <sourceClass target="Person">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Resource">
                <arity>0-n</arity>
            </targetClass>
            <name>is contributor to</name>
            <reverseName>has contributorrole</reverseName>
            <properties>
                <property ID="personIsContributorTo.role">
                    <arity>0-n</arity>
                    <name>contribution role</name>
                    <datatypeRef target="term" vocabRef="vocabs.contributorRoles"/>
                </property>
            </properties>
        </relation>
        
        
        <!-- PROJECT RELATIONS -->
        <relation ID="projectProducesResource">
            <sourceClass target="Project">
                <arity>1</arity>
            </sourceClass>
            <targetClass target="Resource">
                <arity>1-n</arity>
            </targetClass>
            <name>produces</name>
            <reverseName>is output of</reverseName>
        </relation>
        
        <relation ID="projectReusesResource">
            <sourceClass target="Project">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Resource">
                <arity>1-n</arity>
            </targetClass>
            <name>re-uses</name>
            <reverseName>is re-used by</reverseName>
        </relation>
