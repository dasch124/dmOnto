                    <item>in use internally</item>
                    <item>published</item>
                    <item>to be deprecated</item>
                    <item>deprecated</item>
                </list>
            </values>
        </vocab>
        <vocab ID="vocabs.instanceRoles">
            <name>Instance roles</name>
            <values>
                <list>
                    <item>working copy</item>
