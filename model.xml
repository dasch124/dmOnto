        <relation ID="actorIsMemberOfProject" type="implicit">
            <sourceClass target="Actor">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Project">
                <arity>1-n</arity>
            </targetClass>
            <name>is member with role of</name>
            <reverseName>has member with role</reverseName>
            <properties>
                <property ID="projectHasMember.role">
                    <arity>1</arity>
                    <name>role</name>
                    <datatypeRef target="term" vocabRef="vocabs.projectRoles"/>
                </property>
            </properties>
        </relation>
        
        
        <relation ID="softwareIsInstatiatedIn">
            <sourceClass target="Software">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Service">
                <arity>0-n</arity>
            </targetClass>
            <name>is instantiated in</name>
            <reverseName>runs</reverseName>
        </relation>
        
        
        <!-- Dataset relations -->
        <relation ID="datasetIsPartOfCollection">
            <sourceClass target="Dataset">
                <arity>0-n</arity>
            </sourceClass>
            <targetClass target="Collection">
                <arity>1-n</arity>
            </targetClass>
            <name>is part of</name>
            <reverseName>contains</reverseName>
        </relation>
        
        <relation ID="instanceIsMadeUpOfFiles">
            <sourceClass target="Instance">
                <arity>1</arity>
            </sourceClass>
            <targetClass target="File">
                <arity>1-n</arity>
            </targetClass>
            <name>is made up of</name>
            <reverseName>is part of</reverseName>
        </relation>
        
        <relation ID="instanceIsProvidedByService">
            <sourceClass target="Instance">
                <arity>0-n</arity>
            </sourceClass>
            <targetClass target="Service">
                <arity>1-n</arity>
            </targetClass>
            <name>is provided by</name>
            <reverseName>provides</reverseName>
        </relation>
        
        <relation ID="processProducesInstance">
            <sourceClass target="Process">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Instance">
                <arity>0-n</arity>
            </targetClass>
            <name>produces</name>
            <reverseName>produced by</reverseName>
        </relation>
        
        <relation ID="instanceIsManifestationOfResource">
            <sourceClass target="Instance">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Resource">
                <arity>1</arity>
            </targetClass>
            <name>is instantiation of</name>
            <reverseName>is instantiated in</reverseName>
        </relation>
        
        <relation ID="ResourceIsDocumentedIn">
            <sourceClass target="Resource">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Publication">
                <arity>1-n</arity>
            </targetClass>
            <name>is documented in</name>
            <reverseName>documents</reverseName>
        </relation>
        
        
        <relation ID="fileHasFormat">
            <sourceClass target="File">
                <arity>1</arity>
            </sourceClass>
            <targetClass target="Format">
                <arity>1</arity>
            </targetClass>
            <name>has format</name>
            <reverseName>is used in</reverseName>
        </relation>
        
        <relation ID="institutionFundsProject">
            <sourceClass target="Institution">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Project">
                <arity>1-n</arity>
            </targetClass>
            <name>is funder of</name>
            <reverseName>is funded by</reverseName>
        </relation>
        
        <relation ID="processExecutedBy">
            <sourceClass target="Process">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Actor">
                <arity>1-n</arity>
            </targetClass>
            <name>executed by</name>
            <reverseName>executes</reverseName>
        </relation>
        
        <relation ID="resourceIsSuccessorOfResource">
            <sourceClass target="Resource">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Resource">
                <arity>1</arity>
            </targetClass>
            <name>is successor of</name>
            <reverseName>has successor</reverseName>
            <note>establishes a chain of versions</note>
        </relation>
        
        <relation ID="fileHasCarrier">
            <sourceClass target="File">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Carrier">
                <arity>1</arity>
            </targetClass>
            <name>has carrier</name>
            <reverseName>carries</reverseName>
        </relation>
        
        <relation ID="softwareImplementsProcess">
            <sourceClass target="Software">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Process">
                <arity>1-n</arity>
            </targetClass>
            <name>implements</name>
            <reverseName>is implemented in</reverseName>
        </relation>
    </relations>
    
